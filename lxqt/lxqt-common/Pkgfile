# Depends on: lxde-menu-data lxqt-build-tools qtsvg hicolor-icon-theme xdg-utils dejavu-ttf freefont-ttf noto-fonts ttf-liberation breeze-icons


description="Common data to run a LXQt session."
url="http://lxqt.org"
packager="tnut<tnut@nutyx.org>"
contributors="Greg"

run=(lxde-menu-data xdg-utils breeze-icons dejavu-ttf freefont-ttf noto-fonts)



name=lxqt-common
version=0.11.2
release=2

source=(https://github.com/lxde/$name/releases/download/$version/$name-$version.tar.xz
)

prepare() {
echo "Fonction prepare sans objet"
}

build() {
mkdir -p build
cd build
cmake $SRC/$name-$version \
-DCMAKE_INSTALL_PREFIX=/usr 
make
}

package() {
cd build
make DESTDIR=$PKG install
sed -i "s@icon_theme=oxygen@icon_theme=breeze@" \
$PKG/etc/xdg/lxqt/lxqt.conf
sed -i "s@/usr/share/lxqt/themes/frost/lxqt-origami-light.png@/usr/share/backgrounds/nutyx/nutyx.jpg@" \
$PKG/etc/xdg/pcmanfm-qt/lxqt/settings.conf
}

uptodate() {
feed=https://github.com/lxde/$name/releases.atom
exec="lynx -read_timeout=20 -dump -listonly -nonumbers $feed"
ligne=1 # nombre de notification ? afficher
$exec $feed | grep title | \
sed "s@<title>@@" | \
sed "s@</title>@@" | \
head -n $(($ligne+1 )) | \
tail -n $(($ligne))
}

